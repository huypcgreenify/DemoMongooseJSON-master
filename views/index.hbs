<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="text-uppercase section-heading">Quản lí user</h2>
                <h3 class="text-muted section-subheading"></h3>
                <div style="margin-bottom: 20px;"><label>
                    <input placeholder="Tìm kiếm user..." type="text"
                           style="width: 350px;height: 40px;border-radius: 10px; margin-left: 700px;">
                </label>
                </div>

                <div class="table-responsive">

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Chức năng</th>
                            <th>Avatar</th>
                            <th>Tài khoản</th>
                            <th>Mật khẩu</th>
                            <th>Họ và tên</th>
                            <th>Địa chỉ</th>
                            <th>SĐT & Email</th>
                        </tr>
                        </thead>
                        <tbody>
                        <form action="/insertUser" method="post" enctype="multipart/form-data">
                            <tr>
                                <td>

                                    <button class="btn btn-primary" type="submit"
                                            style="background-color: rgb(61,59,53);width: 100px;">Thêm
                                    </button>

                                </td>
                                <td><input name="avatar" type="file"></td>
                                <td><label>
                                    <input name="username" placeholder="Enter username" style="border-radius: 20px">
                                </label>
                                </td>
                                <td><label>
                                    <input name="password" placeholder="Enter password" type="password"
                                           style="border-radius: 20px">
                                </label></td>
                                <td><label>
                                    <input name="name" placeholder="Enter name" style="border-radius: 20px">
                                </label></td>
                                <td><label>
                                    <input name="address" placeholder="Enter address" style="border-radius: 20px">
                                </label></td>
                                <td><label>
                                    <input name="number_phone" placeholder="Enter number phone"
                                           style="border-radius: 20px">
                                </label></td>

                            </tr>
                        </form>
                        {{#each users}}
                            <tr>
                                <td>

                                    <a class="btn btn-primary" type="button"
                                       style="background-color: rgb(61,59,53); width: 100px"
                                       href="/edit/{{this.id}}">Sửa</a>


                                    <form action="{{this._id}}" enctype="multipart/form-data" method="post">
                                        <button class="btn btn-primary" type="submit"
                                                style="background-color: rgb(61,59,53);width: 100px">Xóa
                                        </button>
                                    </form>
                                </td>
                                <td><img
                                        class="img-fluid d-block mx-auto"
                                        style="width: 75px; height: 75px; border-radius: 5px"
                                        src="../assets/img/portfolio/{{this.avatar}}" alt=""></td>
                                <!--                                <td>{{this._id}}</td>-->
                                <td>{{this.username}}</td>
                                <td>{{this.password}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.address}}</td>
                                <td>{{this.number_phone}}</td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
        <div class="row text-center">
            <div class="col-sm-6 col-md-3">
                <a href="#"></a>
            </div>
        </div>
    </div>
</section>
